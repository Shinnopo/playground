{
    "manifest_version" : 2,
    "name" : "Borderify",
    "version" : "1.0",

    "description" : "Adds a solid red border to all webpages matchin mozilla.org.",

    "content_scripts" : [
        {
            "matches" : ["*://*.mozilla.org/*"],
            "js" : ["borderify.js"]
        }
    ]
    
}